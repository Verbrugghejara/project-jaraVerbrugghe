<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DP_project.Views.CreateProject">
    <NavigationPage.TitleView>
        <StackLayout>
            <Label Text="Create project" FontSize="28" FontAttributes="Bold" TextColor="#005D80" HorizontalTextAlignment="Center" Margin="0, 0, 75, 0"/>
        </StackLayout>
    </NavigationPage.TitleView>
    <StackLayout  BackgroundColor="#DDEFF6">
        <StackLayout Padding="16,16,16,16">
                <Grid>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition  />
                    </Grid.ColumnDefinitions>
                <Label VerticalOptions="Center" FontSize="16" TextColor="#005D80" Grid.Column="0" Text="Name" FontAttributes="Bold" Padding="26, 0 ,0 ,0"/>
                    <Entry x:Name="entContent"  Grid.Column="1"  Placeholder="Name project" TextColor="Black" VerticalOptions="Center" />



                </Grid>
            </StackLayout>

        <StackLayout VerticalOptions="End" Padding="16,0,16,0">
            <Button  x:Name="btnCreate" BackgroundColor="#005D80" Grid.Column="2" Text="Save" FontSize="20" FontAttributes="Bold" TextColor="#DDEFF6"/>
        </StackLayout>

    </StackLayout>
</ContentPage>