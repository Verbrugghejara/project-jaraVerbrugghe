<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DP_project.Views.CreateProject">
    <NavigationPage.TitleView>
        <StackLayout>
            <Label Text="Create project" FontSize="28" TextColor="#005D80" HorizontalTextAlignment="Center" Margin="0, 0, 75, 0"/>
        </StackLayout>
    </NavigationPage.TitleView>
    <StackLayout BackgroundColor="#DDEFF6">
        <StackLayout>
                <Grid>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition  />
                    </Grid.ColumnDefinitions>
                <Label VerticalOptions="Center" Grid.Column="0" Text="Name" FontAttributes="Bold" Padding="36, 0 ,0 ,0"/>
                    <Entry x:Name="entContent" Grid.Column="1"  Placeholder="Name project" TextColor="Black" VerticalOptions="Center" />



                </Grid>
            </StackLayout>



        <Button  x:Name="btnCreate" Grid.Column="2" Text="Save"/>
    </StackLayout>
</ContentPage>