<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DP_project.Views.DetailsTaskPage">
    <ContentPage.Content>
        <StackLayout>
           

            <StackLayout>
                <Grid>

                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition  />
                    </Grid.ColumnDefinitions>
                    <ListView HeightRequest="50" HorizontalOptions="Center"  Grid.Row="0" Grid.ColumnSpan="2" x:Name="lvwTaskName">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <Label Padding="0,8,0,0" HorizontalOptions="Center" Text="{Binding Name}" FontSize="Large" FontAttributes="Bold" TextColor="Black"></Label>

                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <Label VerticalOptions="Center" Grid.Row="1" Grid.Column="0" Text="Content" FontAttributes="Bold" Padding="16, 0 ,0 ,0"/>
                    <Entry x:Name="entContent" Grid.Row="1" Grid.Column="1"  Placeholder="Edit task" TextColor="Black" VerticalOptions="Center" />


                </Grid>
            </StackLayout>



            <Button  x:Name="btnSave"  Text="Save"/>
            <Button  x:Name="btnDelete"  Text="Delete task" BackgroundColor="Red"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>